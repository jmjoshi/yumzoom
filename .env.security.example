# Security & Compliance Environment Variables
# Add these to your .env.local file

# Two-Factor Authentication
TOTP_SECRET_KEY=your-32-character-secret-key-here
TOTP_APP_NAME=YumZoom
TOTP_ISSUER=YumZoom Food Rating Platform

# Email Configuration for Security Notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yumzoom.com

# Encryption Keys (Generate using crypto.randomBytes(32).toString('hex'))
ENCRYPTION_KEY=your-64-character-encryption-key-here
HMAC_SECRET=your-64-character-hmac-secret-here

# Security Monitoring
SECURITY_ALERT_EMAIL=security@yumzoom.com
MAX_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# IP Geolocation (Optional - for enhanced monitoring)
MAXMIND_LICENSE_KEY=your-maxmind-license-key
MAXMIND_DATABASE_PATH=./data/GeoLite2-City.mmdb

# Security Dashboard
SECURITY_DASHBOARD_SECRET=your-dashboard-secret-key

# Compliance Settings
GDPR_COMPLIANCE_EMAIL=privacy@yumzoom.com
CCPA_COMPLIANCE_EMAIL=privacy@yumzoom.com
DATA_RETENTION_DAYS=2555  # 7 years for compliance

# Session Security
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=3600000  # 1 hour in milliseconds

# API Security
API_RATE_LIMIT=1000
API_BURST_LIMIT=50

# Database Security
DB_ENCRYPTION_ENABLED=true
DB_AUDIT_ENABLED=true

# Backup & Recovery
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_RETENTION_DAYS=90

# External Services (Optional)
LOGGING_SERVICE_URL=https://your-logging-service.com/api/logs
LOGGING_SERVICE_KEY=your-logging-service-api-key
ALERT_SERVICE_URL=https://your-alert-service.com/api/alerts
ALERT_SERVICE_KEY=your-alert-service-api-key
