# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_production_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_production_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_production_service_role_key_here

# App Configuration - PRODUCTION USES HTTPS ONLY
NEXT_PUBLIC_APP_URL=https://yumzoom.com
NODE_ENV=production

# Security Configuration
AUTO_ROTATE_KEYS=true
BLOCK_PROXIES=true
BLOCKED_COUNTRIES=NK,IR,CU
HIGH_RISK_COUNTRIES=RU,CN,VN
ADMIN_EMAIL=admin@yumzoom.com

# HTTPS Enforcement
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
INCLUDE_SUBDOMAINS=true
PRELOAD=true

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.yumzoom.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=noreply@yumzoom.com
SMTP_PASS=your-production-smtp-password
SMTP_FROM=noreply@yumzoom.com

# Security Monitoring
SECURITY_ALERT_EMAIL=security@yumzoom.com
MAX_LOGIN_ATTEMPTS=3
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=50

# Session Security
SESSION_SECRET=your-production-session-secret-key
SESSION_TIMEOUT=1800000  # 30 minutes in production

# API Security
API_RATE_LIMIT=500
API_BURST_LIMIT=25

# Database Security
DB_ENCRYPTION_ENABLED=true
DB_AUDIT_ENABLED=true

# CDN Configuration
CDN_URL=https://cdn.yumzoom.com
STATIC_ASSET_URL=https://static.yumzoom.com

# Third-Party Services (All HTTPS)
GOOGLE_CALENDAR_REDIRECT_URI=https://yumzoom.com/auth/google/callback
FACEBOOK_REDIRECT_URI=https://yumzoom.com/auth/facebook/callback
TWITTER_REDIRECT_URI=https://yumzoom.com/auth/twitter/callback

# Webhook URLs (All HTTPS)
STRIPE_WEBHOOK_URL=https://yumzoom.com/api/webhooks/stripe
SUPABASE_WEBHOOK_URL=https://yumzoom.com/api/webhooks/supabase
INTEGRATION_WEBHOOK_URL=https://yumzoom.com/api/webhooks/integrations

# Compliance URLs
PRIVACY_POLICY_URL=https://yumzoom.com/privacy
TERMS_OF_SERVICE_URL=https://yumzoom.com/terms
GDPR_PORTAL_URL=https://yumzoom.com/privacy/gdpr
CCPA_PORTAL_URL=https://yumzoom.com/privacy/ccpa

# Analytics (Secure endpoints only)
GOOGLE_ANALYTICS_ID=your-ga-id
HOTJAR_ID=your-hotjar-id
MIXPANEL_TOKEN=your-mixpanel-token

# Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
BUGSNAG_API_KEY=your-bugsnag-api-key

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
DATADOG_API_KEY=your-datadog-api-key

# Content Security Policy
CSP_REPORT_URI=https://yumzoom.com/api/csp-report
CSP_REPORT_ONLY=false

# Additional Security Headers
REFERRER_POLICY=strict-origin-when-cross-origin
PERMISSIONS_POLICY=camera=(), microphone=(), geolocation=()
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
